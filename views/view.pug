doctype html
head
  title Blog Cool
  script(type="text/javascript", src="../bootstrap/js/bootstrap.min.js")
  link(rel="stylesheet", href="../bootstrap/css/bootstrap.min.css")
  
body.bg-light
  include header.pug
  div.container
    div.row
      div.col.card.container.m-3
        div.card-header.row
          h5.col #{data.titre}
          p.text-right.col #{data.date}
        div.card-body
          p.card-text #{data.contenu}
          p.text-right Auteur : #{data.auteur}
  include footer.pug
